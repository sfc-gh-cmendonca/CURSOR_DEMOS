# Snowflake Connection Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# Snowflake Account Information
SNOWFLAKE_ACCOUNT=your_account_identifier
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_ROLE=CORTEX_USER_ROLE
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=JPMC_MARKETS
SNOWFLAKE_SCHEMA=MARKET_INTELLIGENCE

# Alternative authentication methods (comment out password above if using these)
# SNOWFLAKE_PRIVATE_KEY_PATH=path/to/private_key.p8
# SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=your_passphrase
# SNOWFLAKE_AUTHENTICATOR=externalbrowser  # For SSO

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_THEME_BASE=light

# Application Configuration
APP_NAME=JPMC Markets Intelligence
APP_VERSION=1.0.0
LOG_LEVEL=INFO
DEBUG_MODE=False

# API Keys (if using external data sources)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FINNHUB_API_KEY=your_finnhub_key

# Security Settings
SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_USERS=100

# Performance Settings
QUERY_TIMEOUT_SECONDS=300
MAX_RESULTS_PER_PAGE=1000
CACHE_EXPIRY_MINUTES=15

# Cortex Search Settings
EMBEDDING_MODEL=snowflake-arctic-embed-m
SEARCH_LIMIT=50
CHUNK_SIZE=1000
CHUNK_OVERLAP=200 